<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.takahirom.multiwindowapplauncher.MainActivity">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_select_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tint="@android:color/white"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_add_black_24dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.44" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_select_app"
        android:layout_marginBottom="32dp"
        app:layout_constraintHorizontal_bias="0.43">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_create_shortcut"
            android:layout_width="339dp"
            android:layout_height="63dp"
            android:text="Create shortcut?"
            app:layout_constraintLeft_toLeftOf="@+id/cardView"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/cardView"
            app:layout_constraintBottom_toBottomOf="@+id/activity_main"
            android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.060000002" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
